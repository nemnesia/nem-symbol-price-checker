[Unit]
Description=NEM/Symbol Price Checker - Current Price Collection
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
User=__USER__
WorkingDirectory=__PROJECT_DIR__
Environment=NODE_ENV=production
ExecStart=__NODE_PATH__ __PROJECT_DIR__/dist/current-price.js

# ログ設定
StandardOutput=journal
StandardError=journal
SyslogIdentifier=nem-symbol-current

# セキュリティ設定
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=__PROJECT_DIR__/data
ReadWritePaths=__PROJECT_DIR__/cache
ReadWritePaths=__PROJECT_DIR__/logs

[Install]
WantedBy=multi-user.target
